{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "target": "es2017",
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "*": ["src/*"]
    },
    "outDir": ".dist/",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*"
  ]
}
