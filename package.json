{
  "name": "json-rules-poc-cli",
  "version": "1.0.0",
  "description": "CLI utility to test Rules engine",
  "main": "dist/json-rules-poc-cli.js",
  "scripts": {
    "build": "npm run clean; npm ci",
    "clean": "rm -rf reports/ .webpack/ dist/ .nyc_output/",
    "compile": "npx webpack --config webpack.config.js",
    "exec": "node --require ts-node/register src/index.ts -f ./data/facts.json -r ./data/rules.json",
    "exec:6": "node --require ts-node/register src/index.ts -f ./data/test_case_6_facts.json -r ./data/test_case_6_rules.json",
    "exec:expr": "clear; node --require ts-node/register src/index.ts -f ./data/expression_facts.json -e ./data/expression_rules.json",
    "deploy": "npm run compile;",
    "eslint:run": "eslint './src/**/*.{ts,tsx}'",
    "eslint:fix": "eslint './src/**/*.{ts,tsx}' --fix",
    "test": "clear; npm run tests:unit",
    "coverage": "nyc mocha --require ts-node/register --require source-map-support/register --timeout 120000 --reporter xunit --reporter-options output=reports/test-results.xml --full-trace --bail test/**/*.ts test/**/**/*.ts test/**/**/**/*.ts",
    "tests:unit": "npx mocha --recursive -r ts-node/register ./test/**/*.unit.ts"
  },
  "author": "Rodrigo de Souza <rsouza01@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "commander": "^2.19.0",
    "json-rules-engine": "^5.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/debug": "^4.1.5",
    "@types/mocha": "^7.0.2",
    "@types/node": "^8.10.61",
    "@types/sinon": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "mocha": "^7.2.0",
    "nyc": "^15.1.0",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^1.7.2"
  }
}
